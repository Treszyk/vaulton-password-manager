# --- DEPLOYMENT SETTINGS ---
DOMAIN_NAME=vaulton.your-domain.com
ACME_EMAIL=your-email@example.com

# --- BACKEND SETTINGS ---
# Use __ to separate nested keys in .NET environment variables
ConnectionStrings__Default=Server=vaulton-db,1433;Database=VAULTON_DB;User Id=sa;Password=YourStrongPassword123!;TrustServerCertificate=True;

# Security Secrets (Must be unique and long)
Jwt__Secret=CHANGE_ME_TO_A_64_CHARACTER_RANDOM_STRING_AT_LEAST
Jwt__Issuer=Vaulton
Jwt__Audience=VaultonClient

# Crypto Pepper (Base64, 32 bytes)
# Generate via: openssl rand -base64 32
Auth__VerifierPepper=CHANGE_ME_32_BYTE_BASE64_PEPPER
Auth__FakeSaltSecret=CHANGE_ME_32_BYTE_BASE64_SALT_SECRET

# Performance/Security Tuning
Auth__VerifierPbkdf2Iterations=600000

# --- DATABASE SETTINGS ---
# Password MUST match the ones in ConnectionStrings__Default
SQL_PASSWORD=YourStrongPassword123!
ACCEPT_EULA=Y
MSSQL_PID=Express
